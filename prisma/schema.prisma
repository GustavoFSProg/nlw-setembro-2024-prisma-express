model Goals {
 id String @id @default(uuid()) @map("_id")
  title String
  desiredWeeklyFrequency Int 
  createdAt DateTime @default(now())
}


model Goal_Completions {
 id String @id @default(uuid()) @map("_id")
  goalId String
  createdAt DateTime @default(now())
}
